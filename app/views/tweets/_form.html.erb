<%= form_with(model: @tweet, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tweet_content">
  <%= form.label :Tweet! %>
  <%= form.text_field :content %>
  </div>
    <%= form.submit do %>
    <%= image_tag "tweet_button.png" %>
    <% end %>
  <% end %>

<%= link_to "ツイートの一覧の画面にもどる", tweets_path %>
